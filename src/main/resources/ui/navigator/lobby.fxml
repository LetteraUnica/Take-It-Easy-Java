<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.lobby.LobbyController">
    <Text layoutX="24.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Current players"
          wrappingWidth="283.0">
        <font>
            <Font size="24.0"/>
        </font>
    </Text>
    <Button fx:id="startMatchButton" disable="true" layoutX="338.0" layoutY="139.0" mnemonicParsing="false"
            onAction="#startMatch" prefHeight="155.0" prefWidth="240.0" text="Start Match" textAlignment="CENTER">
        <font>
            <Font size="28.0"/>
        </font>
    </Button>
    <Button layoutX="338.0" layoutY="348.0" mnemonicParsing="false" onAction="#returnToMainMenu" prefHeight="35.0"
            prefWidth="240.0" styleClass="secondary-button" text="Return to Menu">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
    <ScrollPane hbarPolicy="NEVER" layoutX="24.0" layoutY="58.0" prefHeight="324.0" prefWidth="283.0">
        <GridPane fx:id="playerListPane" alignment="TOP_CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="32.0"
                  prefWidth="278.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
    </ScrollPane>
    <HBox layoutX="338.0" layoutY="48.0" prefHeight="56.0" prefWidth="240.0">
        <TextField fx:id="playerNameField" onKeyTyped="#onPlayerNameChange" prefHeight="55.0" prefWidth="154.0"
                   promptText="Add player" style="-fx-background-radius: 10 0 0 10;" styleClass="textfield">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>
        <Button fx:id="addPlayerButton" alignment="CENTER_RIGHT" disable="true" mnemonicParsing="false"
                onAction="#addPlayer" prefHeight="54.0" prefWidth="86.0" style="-fx-background-radius: 0 10 10 0;"
                text="Add player">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </HBox>
</AnchorPane>
